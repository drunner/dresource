# Y8,                                                                           88      ,8P                                                                 
# `Y8aaaaa,     ,adPPYba,  8b,dPPYba,  8b       d8  88   ,adPPYba,   ,adPPYba,  88aaaaaa8P'  88       88  8b,dPPYba,   8b,dPPYba,    ,adPPYba,  8b,dPPYba,  
#   `"""""8b,  a8P_____88  88P'   "Y8  `8b     d8'  88  a8"     ""  a8P_____88  88""""88'    88       88  88P'   `"8a  88P'   `"8a  a8P_____88  88P'   "Y8  
#         `8b  8PP"""""""  88           `8b   d8'   88  8b          8PP"""""""  88    `8b    88       88  88       88  88       88  8PP"""""""  88          
# Y8a     a8P  "8b,   ,aa  88            `8b,d8'    88  "8a,   ,aa  "8b,   ,aa  88     `8b   "8a,   ,a88  88       88  88       88  "8b,   ,aa  88          
#  "Y88888P"    `"Ybbd8"'  88              "8"      88   `"Ybbd8"'   `"Ybbd8"'  88      `8b   `"YbbdP'Y8  88       88  88       88   `"Ybbd8"'  88          



#------------------------------------------------------------------------------------
# Initialisation of globals.

# bail if we try and use an unset var
set -o nounset

# Determine the current directory. There's stuff in there we want.
MYDIR=$( dirname "$(readlink -f "$0")" )

# read shell includes autogenerated by dRunner for us (it makes them when we're installed).
source "$MYDIR/utils.sh"

# we want to be in the same directory as docker-compose.yml for docker-compose to work nicely.
cd $MYDIR

#------------------------------------------------------------------------------------
# showhelp - give some info about the service. SERVICENAME and IMAGENAME are provided by variables.sh.

function showhelp {
cat <<EOF >&2
NAME
   ${SERVICENAME}
       
SYNOPSIS
   ${CODE_S}${SERVICENAME} help${CODE_E}
      This help.
   
   ${CODE_S}${SERVICENAME} configure USERNAME AWS_ACCESS_KEY AWS_SECRET_KEY${CODE_E}
      Configure dResource.
  
   ${CODE_S}${SERVICENAME} create RESOURCE_FILE${CODE_E}
      Creates and updates resources specified in RESOURCE_FILE.
      Also deletes any resources that were created but are no longer specified.
   
   ${CODE_S}${SERVICENAME} delete RESOURCE_FILE${CODE_E}
      Deletes all resources for this username and project (specified in RESOURCE_FILE).
   
DESCRIPTION
   Helpers for creating AWS resources. Built from ${IMAGENAME}.
   
EOF
}

#------------------------------------------------------------------------------------
# The main function. We can add any commands we'd like here!

function main {
   [ "$#" -gt 0 ] || die "servicerunner must have arguments."

   COMMAND="${1}" ; shift

   case "$COMMAND" in 
   
          #--- standard (required) commands
                        
         backupstart)
            BACKUPPATH="$1"
            ;;
         
         backupend)
            BACKUPPATH="$1"
            ;;
         
         restore)
            RESTOREPATH="$1"
            ;;
         
         help)
            showhelp
            ;;
         
         #--- custom commands

         configure)
            [ ! -z "${USERNAME:-}" ] || die "Username not found, please run ${CODE_S}USERNAME=? AWS_ACCESS_KEY=? AWS_SECRET_KEY=? ${SERVICENAME} configure${CODE_E}"
            [ ! -z "${AWS_ACCESS_KEY:-}" ] || die "AWS Access Key not found, please run ${CODE_S}USERNAME=? AWS_ACCESS_KEY=? AWS_SECRET_KEY=? ${SERVICENAME} configure${CODE_E}"
            [ ! -z "${AWS_SECRET_KEY:-}" ] || die "AWS Secret Key not found, please run ${CODE_S}USERNAME=? AWS_ACCESS_KEY=? AWS_SECRET_KEY=? ${SERVICENAME} configure${CODE_E}"

            save_environment "USERNAME" "${USERNAME}"
            save_environment "AWS_ACCESS_KEY" "${AWS_ACCESS_KEY}"
            save_environment "AWS_SECRET_KEY" "${AWS_SECRET_KEY}"
            ;;
            
         create)
            [ "$#" -eq 1 ] || die "dresource create RESOURCE_FILE"
            FILE=$(realpath $1)
            RESOURCE_FILE="$FILE" docker-compose -p "${SERVICENAME}" run --rm -T "--user=\"$(id -u):$(id -g)\"" \
                  dresource bash -c "ansible-playbook -i /ansible/inventory /ansible/createResources.yml"
           ;;
           
         delete)
            [ "$#" -eq 1 ] || die "dresource delete RESOURCE_FILE"
            RESOURCE_FILE="${1}" docker-compose -p "${SERVICENAME}" run --rm -T "--user=\"$(id -u):$(id -g)\"" \
                  dresource bash -c "ansible-playbook -i /ansible/inventory /ansible/deleteResources.yml"
           ;;
            
         #--- unrecognised commands

         *)
            # For the standard hooks we don't implement we're required to produce
            # no output and set exit code 127 (E_NOTIMPL).
            ! isHook ${COMMAND} || exit 127

            showhelp
            die "Unrecognised command ${CODE_S}${COMMAND}${CODE_E}"
            ;;
   esac
}

#------------------------------------------------------------------------------------

main "$@"
